---
import { getCollection } from "astro:content";
const projectsCard = await getCollection("projects");
import JS from "../components/stack/JS.astro"
import Node from "../components/stack/Node.astro"
---
<div class="container">
    {projectsCard.map((card) => {
        const { data } = card;
        const { title, desc, img, tech } = data;
        const Render = true;
        
        return (
          <div class="card">
            
              <h2>{title}</h2>
              <div class="img">
              <img src={img} alt="imagen" />

              </div>
              <p>{desc}</p>
              <div class="tech">
                {Object.values(tech).map((techName) => (
                    <> 
                  {Render && techName === "JavaScript" ? <JS /> : null}
                  {Render && techName === "Node" ? <Node /> : null}
          
                  </>
                ))}
              </div>
            </div>

        );
      })}
      

    <div/>
<style>

    
    .tech{
        
        max-width: fit-content;
        justify-content: start;
        align-items: center;
        padding: 10px;
        display: flex;
    }


    .container{
        
        overflow-x: scroll;
        display: grid;
        grid-template-columns: repeat(10, 1fr);
        width: 100%;
        height: 100%;
        scroll-behavior: smooth;
        scrollbar-color: rgba(83, 83, 83, 0.87) rgba(54, 54, 54, 0.452);
      
    }

    .card{
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 20px;
        font-size: 20px;
        border-radius: 10px;
        width: 400px;
        margin: 20px;
        background-color: rgb(41, 41, 41);
        height: 400px;
    }

    .card img{
        height: 200px;
    }
</style>


